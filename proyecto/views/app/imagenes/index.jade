extends ../../layout.jade
block contenido
    div(class="container")
        h1 Mis Imagenes
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2
                        a(href="/app/imagenes/#{imagen._id}/edit", class="btn btn-info right-space") Editar
                        a(href="/app/imagenes/#{imagen._id}", class="btn btn-warning") Eliminar 
            
